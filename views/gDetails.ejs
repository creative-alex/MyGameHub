<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= game.name %> - Detalhes</title>
</head>
<body>
  <h1><%= game.name %></h1>
  
  <p><strong>Resumo:</strong> <%= game.summary %></p>
  
  <p><strong>Data de Lançamento:</strong> <%= game.first_release_date %></p>
  
  <p><strong>Plataformas:</strong> <%= game.platforms %></p>
  
  <p><strong>Gêneros:</strong> <%= game.genres %></p>
  
  <p><strong>Modos de Jogo:</strong> <%= game.game_modes %></p>
  
  <p><strong>Desenvolvedores:</strong> <%= game.developers %></p>
  
  <p><strong>Publicadoras:</strong> <%= game.publishers %></p>

  <% if (game.cover) { %>
    <div>
      <strong>Capa:</strong>
      <img src="<%= game.cover %>" alt="Capa do jogo" />
    </div>
  <% } %>

  <% if (game.screenshots.length > 0) { %>
    <div>
      <strong>Screenshots:</strong>
      <% game.screenshots.forEach(screenshot => { %>
        <img src="<%= screenshot %>" alt="Screenshot" />
      <% }) %>
    </div>
  <% } %>

  <% if (game.similar_games.length > 0) { %>
    <div>
      <h2>Jogos Similares</h2>
      <% game.similar_games.forEach(similarGame => { %>
        <div>
          <h3><%= similarGame.name %></h3>
          <% if (similarGame.cover) { %>
            <img src="<%= similarGame.cover %>" alt="<%= similarGame.name %> Cover" />
          <% } %>
          <p><strong>Resumo:</strong> <%= similarGame.summary %></p>
        </div>
      <% }) %>
    </div>
  <% } %>

  <% if (comentarios.length > 0) { %>
    <div>
      <h2>Comentários</h2>
      <% comentarios.forEach(comentario => { %>
        <div>
          <p><strong>Usuário:</strong> <%= comentario.username %></p>
          <p><strong>Avaliação:</strong> <%= comentario.rating %>/10</p>
          <p><strong>Comentário:</strong> <%= comentario.review_text %></p>
          <p><strong>Recomendado:</strong> <%= comentario.is_recommended ? 'Sim' : 'Não' %></p>
        </div>
        <hr />
      <% }) %>
    </div>
  <% } else { %>
    <p>Nenhum comentário encontrado para este jogo.</p>
  <% } %>

  <a href="/">Voltar</a>
</body>
</html>
