<body> 
  <header class="header">
    <a class="logo" onclick="location.reload();">
      <img src="/images/logo.png" id="logo" alt="Logo">
    </a>
    <nav class="nav">
      <span class="nav-item" onclick="window.location.href='/category/pc'">PC</span>
      <span class="nav-item" onclick="window.location.href='/category/console'">CONSOLE</span>
      <span class="nav-item" onclick="window.location.href='/category/mobile'">MOBILE</span>      
  </nav>
    <a class="account" id="toggle-button">
      <img src="/images/profile.png" alt="User Icon" class="icon">
      <span>Sign in/Sign Up</span>
    </a>
    <div class="forms-wrapper hidden">
      <!-- Formul√°rio de Registro -->
      <form class="register-form active-form" id="registerForm">
        <h5>WELCOME ADVENTURER</h5>
        <p>Register now and begin tracking your epic journey</p>
        <label for="username">Username</label>
        <input type="text" name="username" placeholder="Choose Your Hero Name" required>
        <label for="email">Email:</label>
        <input type="email" name="email" placeholder="Enter your email" required>
        <label for="password">Password:</label>
        <input type="password" name="password" placeholder="Enter your password" required>
        <input type="password" name="repeatPassword" placeholder="Repeat your password" required>
        <button type="submit">Register</button>
        <p>Already have an account? <span class="switch-form" data-target="loginForm">Sign In</span></p>
        <p id="registerMessage" class="message"></p>
      </form>
    
      <!-- Formul√°rio de Login -->
      <form class="login-form" id="loginForm">
        <h5>WELCOME BACK ADVENTURER</h5>
        <p>Enter your username and password to keep track of your journey</p>
        <label for="email">Email:</label>
        <input type="email" name="email" placeholder="Enter your email" required>
        <label for="password">Password:</label>
        <input type="password" name="password" placeholder="Enter your password" required>
        <button type="submit">Login</button>
        <p>Don't have an account? <span class="switch-form" data-target="registerForm">Register</span></p>
        <p id="loginMessage" class="message"></p>
      </form>
    </div>
    
  </header>
  
  <!-- Barra de Pesquisa -->
  <nav class="search-bar">
    <div class="search-container">
      <input type="text" id="search-input" placeholder="Search...">
      <div class="select-container">
        <select id="platform-select" class="search-select">
          <option value="all">All</option> 
          <option value="pc">PC</option>
          <option value="console">Console</option>
          <option value="mobile">Mobile</option>
        </select>      
        <img src="/images/arrowDown.png" alt="Seta para baixo" class="select-icon icon">
      </div>
      <img src="/images/search.png" alt="Search Icon" class="icon">
    </div>
  </nav>
  
  <!-- Cont√™iner para os resultados -->
  <div id="results-container" class="results-container"></div>
  

<h1>Choose Your Adventure</h1>

<div class="center-container">
<div class="slider-container">
  <div class="slider">
    <div class="slider-item" data-genre-id="8" onclick="fetchCategory(8)">
      <h2 class="slider-title">Platform</h2>
    </div>
    <div class="slider-item" data-genre-id="31" onclick="fetchCategory(31)">
      <h2 class="slider-title">Adventure</h2>
    </div>
    <div class="slider-item" data-genre-id="12" onclick="fetchCategory(12)">
      <h2 class="slider-title">RPG</h2>
    </div>
    <div class="slider-item" data-genre-id="32" onclick="fetchCategory(32)">
      <h2 class="slider-title">Indie</h2>
    </div>
    <div class="slider-item" data-genre-id="15" onclick="fetchCategory(15)">
      <h2 class="slider-title">Strategy</h2>
    </div>
  </div>  
    <button class="slider-button prev" onclick="rotateSlider(-1)">‚ùÆ</button>
    <button class="slider-button next" onclick="rotateSlider(1)">‚ùØ</button>
</div>
</div>

