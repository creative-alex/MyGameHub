<article class="content-section">
  <h3 class="article-title">Top Rated </h3>
  <button class="article-button" onclick="window.location.href='/top-rated-games'">MORE</button>
</article>
<section class="box-container">
  <div class="box" style="background-image: url('<%= topRatedGames[1].cover %>');"></div><!-- TOP 2 -->
  <div class="box large" style="background-image: url('<%= topRatedGames[0].cover %>');"></div> <!-- TOP 1 -->
  <div class="box" style="background-image: url('<%= topRatedGames[2].cover %>');"></div><!-- TOP 3 -->
</section>

<div class="discover">
  <h3 class="discover-title">DISCOVER</h3>
  <div class="button-group">
    <button class="discover-button" id="randomGame" onclick="window.location.href='/randomGame'">SURPRISE ME</button>
    <button class="discover-button" id="randomGame" onclick="window.location.href='/randomGame'">SURPRISE ME</button>
    <button class="discover-button" id="randomGame" onclick="window.location.href='/randomGame'">SURPRISE ME</button>
  </div>
</div>


<section class="game-section">
  <h2 class="line-title">Trending Games</h2>
  <div class="owl-carousel custom-carousel owl-theme">
    <% trendingGames.forEach(game => { %>
      <div class="item" style="background-image: url('<%= game.cover %>');">
        <div class="item-desc">
          <h3><%= game.name %></h3>
          <p onclick="fetchByGameId('<%= game.id %>')">
            <%= game.summary.length > 150 ? game.summary.substring(0, 150) + '...' : game.summary %>
          </p>
        </div>
      </div>
    <% }); %>
  </div>
</section>




