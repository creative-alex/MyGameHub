<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gêneros e Categorias</title>
  <style>
    .list-container {
      display: flex;
      gap: 50px;
    }
    .list {
      border: 1px solid #ccc;
      padding: 15px;
      width: 300px;
    }
    .list h2 {
      margin-bottom: 10px;
    }
    .list ul {
      list-style-type: none;
      padding: 0;
    }
    .list ul li {
      margin-bottom: 5px;
    }
  </style>
</head>
<body>
  <h1>Gêneros e Categorias de Jogos</h1>
  <div class="list-container">
    <div class="list">
      <h2>Gêneros</h2>
      <ul>
        <% genres.forEach(genre => { %>
          <li><%= genre.name %> (ID: <%= genre.id %>)</li>
        <% }) %>
      </ul>
    </div>
    <div class="list">
      <h2>Categorias</h2>
      <ul>
        <% categories.forEach(category => { %>
          <li><%= category.name %> (ID: <%= category.id %>)</li>
        <% }) %>
      </ul>
    </div>
  </div>
</body>
</html>
