<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>*Category*</title>
    <!--CSS Global-->
    <link rel="stylesheet" href="/public/style.css">
    <!--CSS Especifico-->
    <link rel="stylesheet" href="/public/category.css">
</head>
<main>
    <header class="header">
        <div class="logo" onclick="window.location.href='/'"><img src="/images/logo.png" id="logo"></div>

        <nav class="nav">
            <div class="mini-search-container">
              <input type="text" class="mini-search-bar" placeholder="Search...">
              <img src="/images/search.png" alt="Search Icon" class="icon">
            </div>
            <span class="nav-item">PC</span>
            <span class="nav-item">CONSOLE</span>
            <span class="nav-item">MOBILE</span>
          </nav>
        <div class="account">
          <img src="/images/profile.png" alt="User Icon" class="icon">
          <span>Sign in/Sign Up</span>
        </div>
    </header>

    <main>
      <!-- Popular Titles Section -->
      <section class="games-container">
        <div class="games-grid">
          <h2>POPULAR TITLES</h2>
          <% popularGames.forEach((game, index) => { %>
            <div 
              class="g pop-game-<%= index + 1 %>" 
              data-game-id="<%= game.id %>" 
              onclick="fetchByGameId('<%= game.id %>')">
              <h3 class="game-title"><%= game.name %></h3>
              <img src="<%= game.cover %>" alt="<%= game.name %>" />              
            </div>
          <% }); %>
        </div>
      </section>
    
      <!-- All Games Section -->
      <section class="all-games-container">
        <h2>ALL GAMES</h2>
        <% allGames.forEach(game => { %>
            <article class="game">
                <div class="game-cover">
                    <img src="<%= game.cover %>" alt="<%= game.name %>" />
                </div>
                <% game.screenshots.slice(0, 4).forEach((screenshot, index) => { %>
                    <div class="screen-shot i<%= index + 2 %>">
                        <img src="<%= screenshot %>" alt="Screenshot <%= index + 1 %>" />
                    </div>
                <% }); %>
                <h3 class="game-name"><%= game.name %></h3>
                <div class="tag-container">
                    <% (game.genres || []).forEach(genre => { %>
                        <div class="tag"><%= genre %></div>
                    <% }); %>
                </div>
                <div class="category-container">
                  <% (game.platforms || []).forEach(platform => { %>
                    <div 
                        class="tag" 
                        game-platform-data="<%= platform.id %>" 
                        onclick="fetchByPlatform('<%- platform.id %>')">
                        <%= platform.name %>
                    </div>
                <% }); %>                
                </div>
                <div class="classification">
                    <div class="class">Ignore</div>
                    <div class="class">Add to wishlist</div>
                </div>
                <div 
                    class="storeBtn" 
                    data-game-id="<%= game.id %>" 
                    onclick="fetchByGameId('<%= game.id %>')">
                    Visit Game Page
                </div>
            </article>
        <% }); %>
    </section>
    </main>    
