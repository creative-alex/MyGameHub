<body>
    <header class="header">
      <a class="logo" href="/index.html"><img src="/images/logo.png" id="logo"></a>

        <nav class="nav">
            <div class="mini-search-container">
              <input type="text" class="mini-search-bar" placeholder="Search...">
              <img src="/images/search.png" alt="Search Icon" class="icon">
            </div>
            <span class="nav-item">PC</span>
            <span class="nav-item">CONSOLE</span>
            <span class="nav-item">MOBILE</span>
          </nav>
        <div class="account">
          <img src="/images/profile.png" alt="User Icon" class="icon">
          <span>Sign in/Sign Up</span>
        </div>
      
    </header>
      
   <main class="main-content">
  <h2 class="game-name"><%= game.name %></h2>
  
  <div class="game-media" aria-label="Game Media">
    <img src="<%= game.cover %>" alt="Game cover for <%= game.name %>" class="game-cover" />
  </div>
  
  <div class="thumbnails">
    <% game.screenshots.forEach(screenshot => { %>
      <div class="thumbnail">
        <img src="<%= screenshot %>" alt="Screenshot from <%= game.name %>" />
      </div>
    <% }) %>
  </div>
  
  <section class="game-description">
    <h2>Description</h2>
    <span id="description-text">
      <%= game.summary %>
    </span>
  </section>
  
  <section class="game-stats" aria-labelledby="stats-heading">
    <div class="stat-row">
      <div>
        <dt>Popularity</dt>
        <dd>#--</dd>
      </div>
      <div>
        <dt>Score</dt>
        <dd>---</dd>
      </div>
      <div>
        <dt>Your Score</dt>
        <dd>
          <select aria-label="Your Score">
            <option value=none selected>--</option>
            <% for (let i = 1; i <= 10; i++) { %>
              <option value="<%= i %>"><%= i %></option>
            <% } %>
          </select>
        </dd>
      </div>
    </div>
    <div class="button-section">
      <button class="btn add-to-list" aria-label="Add to List">Add to List</button>
      <button class="btn add-to-favorites" aria-label="Add to Favorites">Add to Favorites</button>
    </div>
  </section>
  
  
  <section class="game-info" aria-labelledby="info-heading">
    <dl>
      <div>
        <dt>Release Date:</dt>
        <dd class="release-date"><%= game.first_release_date %></dd>
      </div>
      <div>
        <dt>Developer:</dt>
        <dd class="developer">
          <% if (game.developers && game.developers.trim() !== '') { %>
            <%= game.developers %>
          <% } else { %>
            N/A
          <% } %>
        </dd>
      </div>
      <div>
        <dt>Publisher:</dt>
        <dd class="publisher">
          <% if (game.publishers && game.publishers.trim() !== '') { %>
            <%= game.publishers %>
          <% } else { %>
            N/A
          <% } %>
        </dd>
      </div>
      
      <div>
        <dt>Category/Genre</dt>
        <dd>
          <ul class="tags">
            <% game.genres.split(', ').forEach(genre => { %>
              <li><%= genre %></li>
            <% }) %>
          </ul>
        </dd>
      </div>
      <div>
        <dt>Game Modes</dt>
        <dd>
          <i class="fas fa-users"></i>
          <% if (game.game_modes && game.game_modes.length > 0) { %>
            <% game.game_modes.split(', ').forEach(mode => { %>
              <a class="game-modes"><%= mode %></a>
            <% }) %>
          <% } else { %>
            <span>No game modes available</span>
          <% } %>
        </dd>
      </div>  
    </dl>
  </section>
</main>


<section class="games-container">        
  <div class="games-grid">
      <h2>SIMILAR GAMES</h2>
      <% if (game.similar_games && game.similar_games.length > 0) { %>
        <% game.similar_games.slice(0, 8).forEach(function(similarGame) { %>
          <div class="g similar-game">
            <h3 class="similar-title"><%= similarGame.name %></h3>
            <p class="similar-description">
              <%= similarGame.summary && similarGame.summary.length > 150 
                  ? similarGame.summary.substring(0, 147) + '...' 
                  : (similarGame.summary || 'No description available.') %>
            </p>
            <% if (similarGame.cover) { %>
              <img class="similar-cover" src="<%= similarGame.cover %>" alt="<%= similarGame.name %> Cover">
            <% } %>
          </div>
        <% }); %>
      <% } else { %>
        <p>No similar games available.</p>
      <% } %>
      

  </div>
</section>



